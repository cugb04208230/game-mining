@model Webdiyer.WebControls.Mvc.PagedList<WebApp.Models.RewardViewModel>
@using Webdiyer.WebControls.Mvc
@{
    ViewBag.Title = "我的财务";
}

@section css
{

    <style type="text/css">
        .row0 {
            background: #FFF;
            width: 100%;
        }

        .row1 {
            width: 25%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
            background: #ede9e9;
            margin-right: 1px;
            vertical-align: middle;
            padding-top: 2px;
        }

        .row2 {
            width: 20%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
            background: #ede9e9;
            margin-right: 1px;
            vertical-align: middle;
            padding-top: 2px;
        }

        .row3 {
            width: 39%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
            background: #ede9e9;
            margin-right: 1px;
            vertical-align: middle;
            padding-top: 2px;
        }

        .row4 {
            width: 14%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
            background: #ede9e9;
            margin-right: 1px;
            vertical-align: middle;
            padding-top: 2px;
        }


        .row11 {
            width: 25%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
        }

        .row12 {
            width: 20%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
        }

        .row13 {
            width: 40%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
        }

        .row14 {
            width: 14%;
            margin-top: 10px;
            float: left;
            height: 25px;
            text-align: center;
            font-size: 14px;
        }


        .top {
            margin: 55px 2px 0px 2px;
            width: auto;
            height: 36px;
            background: #ede9e9;
        }

        .smallcontent1 {
            color: red;
            font-size: 15px;
            font-weight: bold;
            line-height: 22px;
            padding: 0px;
            border: 0px;
            vertical-align: middle;
            line-height: 40px;
            padding-left: 10px;
        }
    </style>
}

<div class="main" style="margin-top: 50px; margin-bottom: 96px;">

    <div class="top">
        <div class="smallcontent1">
            账户积分：@ViewBag.Balance
             <span id="imgid2" style="color: #C10; float: right; margin:0px 0 0 0px;">
                <input class="buttonWrap button button-blue buttonLong" type="button" id="btn1"
                       value="我要激活" onclick="location.href='/Member/UserActive'" style="font-size: 14px;color:#FFF" />
            </span>
            <span id="imgid" style="color: #C10; float: right; margin:0px 2px 0 0px;">
                <input class="buttonWrap button button-blue buttonLong" type="button" id="btn"
                       value="我要提分" onclick="location.href='/Member/Withdraw'" style="font-size: 14px;color:#FFF" />

            </span>
           
        </div>
    </div>

    <div>
        <div style="width: 99%;margin: 2px">
            <div class="row1">时间</div>
            <div class="row2">积分</div>
            <div class="row3">说明</div>
            <div class="row4">状态</div>
        </div>
    </div>
    <div class="listsBox" style="margin: 2px;clear: both">
        @foreach (var item in Model)
        {
            <div class="row0">
                <div class="row11">@item.CreateTime</div>
                <div class="row12">@item.Amount</div>
                <div class="row13">@item.Remark</div>
                <div class="row14">@item.Status</div>
            </div>
        }
    </div>
    <div style="margin: 2px">
        @Html.Pager(Model, new PagerOptions { NumericPagerItemCount = 3, PageIndexParameterName = "pageIndex", ContainerTagName = "ul", CssClass = "pagination", CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"javascript:void(0);\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>", Id = "bootstrappager" })
    </div>

</div>

@section scripts
{

}
