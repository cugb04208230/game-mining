@model WebApp.Models.MyViewModel
@{
    ViewBag.Title = "我的资料";
}
@section css
{
    <style type="text/css">
        .verifycode {
            min-width: 50%;
            float: left;
        }
    </style>
}
<div class="main" style="margin-top: 50px;margin-bottom: 110px;">
    <div class="content">
        <div class="container">
            @Html.ValidationSummary(true)
            <form action="/Member/My" method="post" name="form0" id="form0">
                @Html.AntiForgeryToken()
                <div align="center">
                    <table class="formTable">
                        <tbody>
                            <tr>
                                <td>
                                    <label>登录名</label>
                                    @Html.TextBoxFor(model => model.UserId, new { @placeholder = "", Readonly = "true" })
                                    @Html.ValidationMessageFor(model => model.UserId)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>手机号</label>
                                    @Html.TextBoxFor(model => model.Mobile, new { @placeholder = "请输入手机号", Readonly = "true" })
                                    @Html.ValidationMessageFor(model => model.Mobile)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>用户姓名</label>
                                    @Html.TextBoxFor(model => model.UserName, new { @placeholder = "请输入用户姓名" })
                                    @Html.ValidationMessageFor(model => model.UserName)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <label>开户银行及支行名称</label>
                                    @Html.TextBoxFor(model => model.BankName, new { @placeholder = "请输入支行名称" })
                                    @Html.ValidationMessageFor(model => model.BankName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>银行卡号</label>
                                    @Html.TextBoxFor(model => model.CardId, new { @placeholder = "请输入银行卡号" })
                                    @Html.ValidationMessageFor(model => model.CardId)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label> 云联惠账号:</label>
                                    @Html.TextBoxFor(model => model.YlUserId, new { @placeholder = "云联惠账号" })
                                    @Html.ValidationMessageFor(model => model.YlUserId)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label> 云联惠注册手机号:</label>
                                    @Html.TextBoxFor(model => model.YlMobile, new { @placeholder = "云联惠手机号" })
                                    @Html.ValidationMessageFor(model => model.YlMobile)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>旧密码</label>
                                    @Html.PasswordFor(model => model.OldPassword, new { @placeholder = "旧密码(不修改密码不用填写)" })
                                    @Html.ValidationMessageFor(model => model.OldPassword)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <label>新密码</label>
                                    @Html.PasswordFor(model => model.Password, new { @placeholder = "新密码(不修改密码不用填写)" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>确认新密码</label>
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @placeholder = "确认新密码(不修改密码不用填写)" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <input type="submit" class="buttonWrap button button-green buttonLong" value="修改资料">
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <a href="/Member/Logout"
                                       class="buttonWrap button button-red buttonLong">退出登录</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts
{
    

}
