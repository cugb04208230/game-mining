@using BaseClasses.Extensions
@using WebAdmin.Models
@model WebAdmin.Models.AdminModel.MemberMiningEquipmentViewModel

@{
	ViewBag.CurrentMenuLabel = new LeftMenuModel
	{
		Label = "用户",
		Children = new List<LeftMenuModel>
		{
			new LeftMenuModel
			{
				Label = "用户设备",
				Url = "MemberMiningEquipment"
			}
		}
	};
}


<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<form id="searchForm">
					<input name="text" style="height: 40px; padding: 10px; margin: 30px 30px 10px 50px;" value="@Model.Text" placeholder="请输入名称" />
					<button class="btn btn-warning btn-fill btn-wd" type="submit">搜索</button>
				</form>
				<table class="table">
					<thead>
						<tr>
							<td class="text-center">用户名</td>
							<td class="text-center">挖矿设备类型</td>
							<td class="text-center">设备采购价格</td>
							<td class="text-center">收益百分比</td>
							<td class="text-center">有效截止日期</td>
							<td class="text-center">最后一次采集时间</td>
							<td class="text-center">逾期未收取次数</td>
							<td class="text-center">挖矿设备状态</td>
							<td class="text-center">锁定时间</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.MemberMiningEquipments.List)
						{
							<tr>
								<td class="text-center">@item.MemberUserName</td>
								<td class="text-center">@item.Type.GetDescription()</td>
								<td class="text-center">@item.PurchasePrice</td>
								<td class="text-center">@item.Percentage</td>
								<td class="text-center">@item.ValidityTerm</td>
								<td class="text-center">@item.LastCollectAt</td>
								<td class="text-center">@item.OverDueTime</td>
								<td class="text-center">@item.Status.GetDescription()</td>
								<td class="text-center">@item.LockedAt</td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th colspan="9">
								@Html.PageRender(Model.PageIndex, Model.PageSize, Model.MemberMiningEquipments.Count)
							</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
</div>
